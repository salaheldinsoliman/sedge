{{/* docker-compose_base.tmpl */}}
{{ define "docker-compose" }}
version: "3.9"

services:
{{template "execution" .}}
{{if .Mev}}
  mevboost:
    image: flashbots/mev-boost:latest
    networks:
      - sedge
    container_name: mev-boost
    restart: on-failure
    entrypoint:
      - /app/mev-boost
      - -addr
      - 0.0.0.0:{{.MevPort}}
      - -${NETWORK}
      - -relay-check
      - -relays
      - ${RELAY_URL}{{end}}

{{template "consensus" .}}
{{template "validator" .}}
{{if .Prom}}
  prometheus:
    image: ubuntu/prometheus
    network_mode: host
    container_name: prometheus-container
    volumes:
      - '/home/maco/Desktop/prometheus.yml:/etc/prometheus/prometheus.yml'
    environment:
      - TZ=UTC{{ end }}

networks:
  sedge:
    name: sedge_network
{{ end }}